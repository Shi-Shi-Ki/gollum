{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "generated/**/*",
        "gen/**/*"
    ]
}
